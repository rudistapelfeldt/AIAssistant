    <Grid RowDefinitions="1*,Auto, Auto"
        ColumnDefinitions="*, Auto"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        Margin="20,60,20,20"
        Style="{StaticResource MainLayout}">
        <Border
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <Border.StrokeShape>
              <RoundRectangle CornerRadius="10, 10, 10, 10" StrokeThickness="2" />
            </Border.StrokeShape>
            <Grid BackgroundColor="{StaticResource White}"
                  Grid.Row="0"
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  HorizontalOptions="FillAndExpand"
                  VerticalOptions="FillAndExpand">
                <ActivityIndicator
                  Color="Blue"
                  IsRunning="True"
                  IsEnabled="True"
                  VerticalOptions="Center"
                  Scale="0.2"
                  WidthRequest="200"
                  HeightRequest="200"
                  HorizontalOptions="Center"
                  IsVisible="{Binding IsBusy}"/>
               <Editor
                 Text="{Binding ConversationText, Mode=TwoWay}"
                 FontSize="Body"
                 HorizontalOptions="FillAndExpand"
                 VerticalOptions="FillAndExpand"
                 TextColor="{StaticResource TextPrimary}"/>
            </Grid>
          </Border>
        
            <Entry Placeholder="Ask anything"
               Text="{Binding ChatInputText}"
               TextColor="Black"
               Margin="60,10,60,0"
               Grid.Row="1"
               VerticalOptions="End"
               BackgroundColor="{StaticResource White}"
               HorizontalOptions="FillAndExpand"/>
       
    <HorizontalStackLayout
      Grid.Row="2"
      Margin="0,10,0,10"
      Spacing="10"
      HorizontalOptions="Center">
      <Button Text="Send"  Command="{Binding SendChatInputCommand}" HorizontalOptions="Start" WidthRequest="100"/>
      <Button Text="New chat" Command="{Binding NewChatCommand}" HorizontalOptions="Center" WidthRequest="100"/>
    </HorizontalStackLayout>
  </Grid>
