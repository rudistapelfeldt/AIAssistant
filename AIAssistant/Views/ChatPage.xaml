<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AIAssistant.Views.ChatPage"
             Title="AI Chat">
  <VerticalStackLayout VerticalOptions="FillAndExpand"
                       HorizontalOptions="FillAndExpand"
                       BackgroundColor="Blue">
    <Editor Placeholder="Response here"
            FontSize="Body"
            Text="{Binding ConversationText}"
            TextColor="Black"
            BackgroundColor="White"
            VerticalOptions="FillAndExpand"
            HeightRequest="800"/>
    <HorizontalStackLayout HorizontalOptions="CenterAndExpand"
                           Spacing="20">
      <Entry Placeholder="Ask anything"
           Text="{Binding ChatInputText}"
           TextColor="Black"
           VerticalOptions="End"
           BackgroundColor="{StaticResource White}"
           WidthRequest="600"
           HorizontalOptions="FillAndExpand"/>
      <Button Text="Send" Command="{Binding SendChatInputCommand}"/>
      <Button Text="New chat" Command="{Binding NewChatCommand}"/>
    </HorizontalStackLayout>
    

  </VerticalStackLayout>
    
</ContentPage>

