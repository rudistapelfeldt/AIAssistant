<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AIAssistant.Views.ChatPage"
             Title="AI Chat">
  <VerticalStackLayout VerticalOptions="FillAndExpand"
                       HorizontalOptions="FillAndExpand">
    <Editor Placeholder="Response here"
            FontSize="Body"
            Text="{Binding CorrectedText}"
            TextColor="Black"
            BackgroundColor="White"
            VerticalOptions="StartAndExpand"/>
    <HorizontalStackLayout HorizontalOptions="FillAndExpand"
                           Spacing="20">
      <Entry Placeholder="Ask anything"
           Text="{Binding ChatInputText}"
           TextColor="Black"
           VerticalOptions="End"/>
      <Button Text="Send" Command="{Binding SendChatInputCommand}"/>
    </HorizontalStackLayout>
    

  </VerticalStackLayout>
    
</ContentPage>

