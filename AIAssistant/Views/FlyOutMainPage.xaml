<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="AIAssistant.Views.FlyOutMainPage">
  <FlyoutPage.Flyout>
  
    <ContentPage Title="Menu">

        <VerticalStackLayout Spacing="20"
                             Padding="10,10,10,10">
          <Button Text="AI Chat" Command="{Binding NavigateToAIChatCommand}"/>
          <Button Text="AI Image Generation" Command="{Binding NavigateToImageGeneratorCommand}"/>
          <Button Text="AI Check Spelling" Command="{Binding NavigateToCorrectionCommand}"/>
          <Button Text="AI Completion" Command="{Binding NavigateToCompletionCommand}"/>

      </VerticalStackLayout>
                             
    </ContentPage>
  </FlyoutPage.Flyout>
</FlyoutPage>



